{
    "compilerOptions": {
        "strict": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ES2022",
        "resolveJsonModule": true,
        "jsx": "react-jsx",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@solana/spl-token": ["./node_modules/@solana/spl-token"],
            "@components/*": ["./src/components/*"],
            "@queries/*": ["./src/queries/*"],
            "@misc/*": ["./src/misc/*"],
            "@theme/*": ["./src/theme/*"],
        }
    },
    "exclude": ["./node_modules"]
}